@using CarDealer.Models
@model List<Cars>
<h1 style="text-align:center;margin-top:10px;font-size:40px;" >Car Dealership</h1>
    <div class="container">
        <div class="row col-lg-4">
<ul   >
    @foreach (var item in Model)
    {
        <li style="list-style-type:none; margin:50px;">
            <div class="card" style="width: 300px;">
                
                <img class="card-img-top" width="150" object-fit:contain src="@item.Image" alt="Card image cap">
                <div class="card-body">
                    <p>Brand: <b>@item.Brand</b></p>
                    <p>Model: <b>@item.Model</b></p>
                    <p>Year: <b>@item.Year</b></p>
                    <p>Color: <b>@item.Color</b></p>
                    <p>Price: <b>@item.Price $</b> </p>
                </div>
            </div>
        </li>
    }
</ul>
</div>
</div>
